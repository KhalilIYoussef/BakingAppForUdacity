<?xml version="1.0" encoding="utf-8"?>
<!-- there are 4 states for each "view" default(unchecked) , pressed, checked, checked pressed -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/ic_favorite_added" android:state_active="true" />
    <item android:drawable="@drawable/ic_favorite_added" android:state_checked="true"/>
    <item android:drawable="@drawable/ic_favorite_added" android:state_checked="true" android:state_pressed="true"/>
    <item android:drawable="@drawable/ic_favorite_added" android:state_pressed="true" />
    <item android:drawable="@drawable/ic_favorite_normal" android:state_first="true" />
    <item android:drawable="@drawable/ic_favorite_normal" />
</selector>